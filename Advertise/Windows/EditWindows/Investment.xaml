<Window x:Class="Advertise.Windows.EditWindows.Investment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Advertise.Windows.EditWindows"
        mc:Ignorable="d"
        Icon="/Resources/EditRowIcon.png"
        ResizeMode="NoResize"
        Title='Изменениеза записи в таблице "Вложения"' Height="255.702" Width="517.196">
    <Grid>
        <Label Content="Идентификатор" HorizontalAlignment="Left" Margin="117,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Источник" HorizontalAlignment="Left" Margin="117,66,0,0" VerticalAlignment="Top"/>
